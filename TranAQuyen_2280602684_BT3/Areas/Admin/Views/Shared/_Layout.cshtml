<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-light bg-white border-bottom fixed-top shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Panel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="sidebar d-none d-md-block">
        <nav class="nav flex-column px-3">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Dashboard" ? "active" : "")"
               asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>

            <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Product" ? "active" : "")"
               asp-area="Admin" asp-controller="Product" asp-action="Index">Products</a>

            <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Category" ? "active" : "")"
               asp-area="Admin" asp-controller="Category" asp-action="Index">Categories</a>

            <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "User" ? "active" : "")"
               asp-area="Admin" asp-controller="User" asp-action="Index">Users</a>
        </nav>
    </div>

    <main role="main" class="pt-3">
        @RenderBody()
    </main>

    <footer>
        &copy; 2025 - Admin Panel
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
