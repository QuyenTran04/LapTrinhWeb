<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/styles.css" />
    <style>
        .sidebar {
            height: 100%;
            background-color: #2c3e50;
            color: white;
            padding-top: 20px;
            position: fixed;
            width: 250px;
        }

            .sidebar .nav-link {
                color: white;
                padding: 10px 15px;
                text-decoration: none;
            }

                .sidebar .nav-link:hover {
                    background-color: #34495e;
                }

                .sidebar .nav-link.active {
                    background-color: #16a085;
                }

            .sidebar .profile-section {
                padding: 20px;
                text-align: center;
                border-bottom: 1px solid #7f8c8d;
            }

                .sidebar .profile-section img {
                    width: 70px;
                    border-radius: 50%;
                }

                .sidebar .profile-section h4 {
                    margin: 10px 0;
                    font-size: 18px;
                }

                .sidebar .profile-section p {
                    font-size: 14px;
                }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-light bg-white border-bottom fixed-top shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Panel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="sidebar">
        <div class="profile-section">
            <img src="path-to-avatar.jpg" alt="Profile">
            <h4>John Don</h4>
            <p>johndon@company.com</p>
        </div>
        <nav class="nav flex-column px-3">
            <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Dashboard" ? "active" : "")"
               asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                <i class="bi-house-door"></i> Dashboard
            </a>

            <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Product" ? "active" : "")"
               asp-area="Admin" asp-controller="Product" asp-action="Index">
                <i class="bi-box"></i> Quản Lý Sản Phẩm
            </a>

            <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Category" ? "active" : "")"
               asp-area="Admin" asp-controller="Category" asp-action="Index">
                <i class="bi-tags"></i> Danh mục sản phẩm
            </a>

            <li class="nav-item">
                <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>

            <a class="nav-link @((ViewContext.RouteData.Values["controller"] as string) == "Settings" ? "active" : "")"
               asp-area="Admin" asp-controller="Settings" asp-action="Index">
                <i class="bi-gear"></i> Settings
            </a>
        </nav>
    </div>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer>
        &copy; 2025 - Admin Panel
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
