@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap CSS & Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="admin-bg">

    <div class="sidebar shadow-lg rounded-end-4">
        <div>
            <div class="logo mb-4 fs-3 fw-bold text-primary text-center py-3">DealDeck</div>
            <div class="profile text-center mb-4">
                <img src="/images/admin-avatar.png" alt="Admin avatar" class="avatar-img mb-2" />
                <div class="name fw-semibold">Ferra Alexandra</div>
                <div class="role text-secondary small">Admin store</div>
            </div>
            <nav class="nav flex-column mt-2">
                <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-speedometer2"></i>
                    <span>Bảng điều khiển</span>
                </a>
                <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Report" ? "active" : "")" asp-area="Admin" asp-controller="Report" asp-action="Index">
                    <i class="bi bi-bar-chart"></i>
                    <span>Báo cáo</span>
                </a>
                <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")" asp-area="Admin" asp-controller="Product" asp-action="Index">
                    <i class="bi bi-box-seam"></i>
                    <span>Sản phẩm</span>
                </a>
                <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Consumer" ? "active" : "")" asp-area="Admin" asp-controller="Consumer" asp-action="Index">
                    <i class="bi bi-person"></i>
                    <span>Khách hàng</span>
                </a>
                <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "category" ? "active" : "")"
                   asp-area="Admin" asp-controller="category" asp-action="Index">
                    <i class="bi bi-tags"></i>
                    <span>Danh mục sản phẩm</span>
                </a>
                <a class="nav-link sidebar-link" id="register" asp-area="Identity" asp-page="/Account/Register">
                    <i class="bi bi-person-plus"></i>
                    <span>Đăng ký</span>
                </a>
                <a class="nav-link sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")" asp-area="Admin" asp-controller="Settings" asp-action="Index">
                    <i class="bi bi-gear"></i>
                    <span>Cài đặt</span>
                </a>
            </nav>
        </div>
        <div class="p-3 text-center text-secondary small">
            &copy; 2025 DealDeck Admin
        </div>
    </div>

    <div class="topbar shadow-sm d-flex align-items-center justify-content-between px-4 rounded-bottom-4">
        <div class="fs-5 fw-semibold text-primary">
            @ViewData["Title"] <span class="fw-light">Admin Panel</span>
        </div>
        <div class="topbar-right">
            <partial name="_LoginPartial" />
        </div>
    </div>

    <main class="main-content p-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
