@model IEnumerable<TranAQuyen_2280602684_BT3.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold"> Danh sách danh mục</h3>
        <a asp-action="Add" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Thêm mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle table-bordered shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Tên danh mục</th>
                    <th scope="col" style="width: 180px;">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-sm btn-outline-warning me-1">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
