@page
@model TranAQuyen_2280602684_BT3.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}
<!-- Google Font + Bootstrap Icons -->
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/ForgotPassword-style.css" asp-append-version="true" />
<div class="login-bg">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="auth-card">
                    <h2 class="text-center text-brand mb-3" style="font-weight:700;">@ViewData["Title"]</h2>
                    <p class="text-center text-muted mb-4">Nhập email và mật khẩu mới để khôi phục tài khoản</p>
                    <form method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>

                        <div class="form-floating mb-3">
                            <i class="bi bi-envelope form-icon"></i>
                            <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <i class="bi bi-lock form-icon"></i>
                            <input asp-for="Input.Password" class="form-control" placeholder="Mật khẩu mới" type="password" autocomplete="new-password" />
                            <label asp-for="Input.Password">Mật khẩu mới</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <i class="bi bi-shield-lock form-icon"></i>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" type="password" />
                            <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-gradient btn-lg mb-2">Đổi mật khẩu</button>
                        <div class="text-center mt-3">
                            <a asp-page="./Login" class="small">Quay về đăng nhập</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
